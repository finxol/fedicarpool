{
    "tasks": {
        "dev": "LOG_LEVEL=trace deno run --watch --allow-env --allow-net --allow-sys ./src/main.ts"
    },
    "unstable": ["temporal"],
    "imports": {
        "@fastify/cookie": "npm:@fastify/cookie@^11.0.1",
        "@fastify/helmet": "npm:@fastify/helmet@^12.0.1",
        "@std/assert": "jsr:@std/assert@1",
        "@std/fmt": "jsr:@std/fmt@^1.0.3",
        "@std/uuid": "jsr:@std/uuid@^1.0.4",
        "@types/node": "npm:@types/node@^22.7.8",
        "drizzle-kit": "npm:drizzle-kit@^0.27.1",
        "drizzle-orm": "npm:drizzle-orm@^0.36.0",
        "fastify": "npm:fastify@^5.0.0",
        "postgres": "npm:postgres@^3.4.5"
    },
    "lint": {
        "include": ["src/"],
        "exclude": ["tests/testdata/", "src/fixtures/**/*.ts"],
        "rules": {
            "globals": {
                "Temporal": true
            },
            "tags": ["recommended"],
            "include": [
                "ban-untagged-todo",
                "verbatim-module-syntax",
                "no-undef",
                "no-throw-literal",
                "no-sync-fn-in-async-fn",
                "no-sparse-arrays",
                "no-self-compare",
                "no-non-null-assertion",
                "no-external-import",
                "no-eval",
                "no-const-assign",
                "no-await-in-loop",
                "eqeqeq",
                "default-param-last",
                "camelcase",
                "no-console"
            ]
        }
    },
    "fmt": {
        "useTabs": false,
        "lineWidth": 90,
        "indentWidth": 4,
        "semiColons": false,
        "singleQuote": false,
        "proseWrap": "preserve",
        "include": ["src/"]
    }
}
